<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/details_layout_padding_10dp">

        <ImageView
            android:id="@+id/details_store_logo_iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/details_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/details_text_padding_5dp"
            android:textSize="@dimen/details_text_30sp" />

        <TextView
            android:id="@+id/details_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/details_text_padding_5dp"
            android:textAlignment="center"
            android:textSize="@dimen/details_text_20sp" />

        <TextView
            android:id="@+id/details_phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/ic_action_phone"
            android:drawableTint="@color/colorAccent"
            android:textStyle=""
            android:padding="@dimen/details_text_padding_5dp"
            android:textSize="@dimen/details_text_20sp"
            android:textColor="@color/colorPrimaryLight"/>
    </LinearLayout>
</layout>